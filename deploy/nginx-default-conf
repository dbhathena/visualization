upstream django {
     server 127.0.0.1:8001;
}


server {

     listen   80;
     charset utf-8;
     server_name snapshot.media.mit.edu;
     client_max_body_size 5M;


     location /static {
        expires 365d;
        alias /opt/staticfiles/;
     }

     location /media {
        expires 365d;
        alias /opt/media/;
    }

    location /favicon.ico {
        expires 365d;
        alias /opt/staticfiles/favicon.ico;
    }
     location /robots.txt {
        expires 365d;
        alias /opt/staticfiles/robots.txt;
    }

    location / {
         include uwsgi_params;
         uwsgi_pass django;
         uwsgi_param UWSGI_PYHOME /opt/SNAPSHOTDjango/src/;
         uwsgi_param UWSGI_CHIDIR /opt/SNAPSHOTDjango/src/;
         uwsgi_param UWSGI_SCRIPT project.wsgi;
     }

}
